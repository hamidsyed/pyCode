# client.config - simple key=value
# Database settings
db_type=sqlite
database=bms_bacnet.db
table=bms_readings
# DB server host (used for Postgres)
db_host=localhost
# Database server username (used for Postgres)
db_username=
# Database server password (used for Postgres)
db_password=

# BACnet server to poll (host:port)
bacnet_server=127.0.0.1:47808

# Polling duration in seconds
poll_interval=1.0

# Logging level: DEBUG, INFO, WARNING, ERROR, or numeric
debuglevel=DEBUG

# Local device identity used by this client
local_device_id=999
# Local address to bind client to (optional)
local_address=0.0.0.0:47809
